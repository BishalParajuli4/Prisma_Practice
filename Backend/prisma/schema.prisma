generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  u_id       Int        @id @default(autoincrement())
  name       String
  email      String
  password   String?
  created_at DateTime   @default(now())
  Category   Category[]
  Todo       Todo[]
  role       Role       @default(user)
}

model Category {
  c_id Int    @id @default(autoincrement())
  name String
  u_id Int
  user User   @relation(fields: [u_id], references: [u_id])
  Todo Todo[]
}

model Todo {
  t_id         Int         @id @default(autoincrement())
  name         String
  c_id         Int
  category     Category    @relation(fields: [c_id], references: [c_id])
  is_completed IsCompleted @default(pending)
  created_at   DateTime    @default(now())
  updated_at   DateTime    @updatedAt
  user         User        @relation(fields: [u_id], references: [u_id])
  u_id         Int
}

model Login {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  token    String? // Store JWT token
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


enum Role {
  user
  admin
  superadmin
}

enum IsCompleted {
  pending
  completed
}
